<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listOfHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="My Hours"
                android:textColor="#2E7DBB"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/hoursMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" Monday Hours: none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/openMondayHours"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="0.00" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:text=" - - " />
                <EditText
                    android:id="@+id/closeMondayHours"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="24:00" />
                <Button
                    android:id="@+id/setMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set"
                    android:onClick="set" />
            </LinearLayout>



